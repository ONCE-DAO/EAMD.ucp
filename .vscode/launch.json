{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "command": "npm run updateSubmodules",
            "name": "Run npm updateSubmodules",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "name": "Debug ONCE.ts",
            "request": "launch",
            "runtimeArgs": [
                "run-script",
                "dev"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
        {
            "command": "npm start",
            "name": "Run npm start",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "name": "vscode-jest-tests.v2",
            "type": "node",
            "request": "launch",
            "preLaunchTask": {
                "type": "npm",
                "script": "jest:clearCache"
            },
            "runtimeArgs": [
                "--experimental-vm-modules",
                "--inspect-brk",
                // "--loader",
                //  "./Scenarios/localhost/tla/EAM/Once/dev/2_systems/Once/Once.class.mjs",
                "${workspaceRoot}/node_modules/jest/bin/jest.js",
                "--coverage=false",
                "--runInBand",
                "--watchAll=false",
            ],
            "args": [
                "--testNamePattern",
                "${jest.testNamePattern}",
                "--runTestsByPath",
                "${jest.testFile}"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            //"preLaunchTask": "cleanup_Jest"
        }
    ]
}